{
  "name": "typescript-web-starter",
  "version": "1.0.0",
  "description": "Basic Typescript boilerplate for front-end development without bundlers",
  "repository": "git@github.com:karlprieb/typescript-web-starter.git",
  "author": "Karl Prieb <karl@prieb.me>",
  "license": "MIT",
  "scripts": {
    "commit": "git-cz",
    "build:ts": "babel src --out-dir build --extensions '.ts'",
    "build:ts:watch": "babel --watch src --out-dir build --extensions '.ts'",
    "build:dependencies": "pika install",
    "type-check": "tsc",
    "type-check:watch": "tsc --watch",
    "lint:ts": "eslint src/**/*.ts",
    "lint:ts:fix": "eslint src/**/*.ts --fix",
    "prepare": "pika install"
  },
  "devDependencies": {
    "@babel/cli": "^7.6.2",
    "@babel/core": "^7.6.2",
    "@babel/helper-plugin-utils": "^7.0.0",
    "@babel/preset-typescript": "^7.6.0",
    "@pika/web": "^0.6.1",
    "@types/ramda": "^0.26.26",
    "@typescript-eslint/eslint-plugin": "^2.3.2",
    "@typescript-eslint/parser": "^2.3.2",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "3.0.2",
    "eslint": "^6.5.1",
    "eslint-config-prettier": "^6.3.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "prettier": "^1.18.2",
    "typescript": "^3.6.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "ramda": "^0.26.1"
  }
}
